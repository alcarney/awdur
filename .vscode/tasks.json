{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "yarn: start",
            "detail": "Start developing.",
            "type": "shell",
            "command": "yarn run start",
            "options": {
                "cwd": "${workspaceRoot}/app"
            },
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "ℹ ｢wdm｣: Compiling...",
                    "endsPattern": "ℹ ｢wdm｣: Compiled successfully."
                }
            },
        }
    ]
}