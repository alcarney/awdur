{
  "name": "awdur",
  "version": "0.0.4",
  "description": "Simple screenwriting with fountain",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "start": "npm run build:main && npm run build:ui",
    "build": "NODE_ENV='production' webpack --progress --config webpack.main.config.js && NODE_ENV='production' webpack --progress --config webpack.ui.config.js",
    "build:main": "webpack --progress --config webpack.main.config.js",
    "build:ui": "webpack --progress --config webpack.ui.config.js",
    "dist": "yarn build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "Alex Carney",
    "email": "alcarneyme@gmail.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.github.swyddfa.awdur",
    "directories": {
      "output": "build"
    },
    "linux": {
      "target": [
        "deb",
        "snap"
      ]
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "css-loader": "^4.2.1",
    "electron": "^9.1.2",
    "electron-builder": "^22.8.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "chokidar": "^3.4.2",
    "express": "^4.17.1",
    "lit-html": "^1.2.1",
    "monaco-editor": "^0.20.0"
  }
}