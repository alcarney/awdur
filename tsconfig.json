{
    "include": [
        "src/**/*",
        "app/src/components",
        "app/src/editor"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "outDir": "public/",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2015",
        "lib": [
            "DOM",
            "ES2015",
        ],
        "types": [],
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./node_modules"
    }
}